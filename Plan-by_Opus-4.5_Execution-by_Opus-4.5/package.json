  },
  "devDependencies": {
    "typescript": "5.9.3",
    "@types/node": "24.x",
    "@types/react": "^19.2.11",
    "@types/react-dom": "^19.2.3",
    "eslint": "9.39.2",
    "eslint-config-next": "16.1.6",
    "@next/eslint-plugin-next": "16.1.6",
    "prettier": "3.8.1",
    "eslint-config-prettier": "10.1.8",
    "typescript-eslint": "8.54.0",
    "tailwindcss": "4.1.18",
    "@tailwindcss/postcss": "4.1.18",
    "postcss": "8.5.6",
    "autoprefixer": "10.4.24"
